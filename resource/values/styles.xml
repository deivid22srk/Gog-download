<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gog_purple</item>
        <item name="colorPrimaryDark">@color/gog_dark_purple</item>
        <item name="colorAccent">@color/gog_light_purple</item>
        <item name="android:windowBackground">@color/gog_background</item>
        <item name="android:textColor">@color/gog_text_primary</item>
        <item name="android:textColorSecondary">@color/gog_text_secondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button Styles -->
    <style name="GOGButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/gog_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- EditText Styles -->
    <style name="GOGEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gog_text_primary</item>
        <item name="android:textColorHint">@color/gog_text_secondary</item>
        <item name="android:background">@color/gog_card_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Card Styles -->
    <style name="GOGCard" parent="CardView">
        <item name="cardBackgroundColor">@color/gog_card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="GOGTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/gog_text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GOGSubtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/gog_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>